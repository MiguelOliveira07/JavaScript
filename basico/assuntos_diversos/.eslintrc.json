{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],          // exige ponto e vírgula
    "quotes": ["error", "single"],        // exige aspas simples
    "no-unused-vars": "warn"               // avisa variáveis não usadas
  }
}
